{% extends 'admin.html.twig' %}

{% block body %}
    <h1>Team creation</h1>

    {{ form_start(form) }}


    <div class="form-row">

        <div class="col-md-6">
            <div class="form-row">
                <div class="col-md-6">
                    <div class="position-relative form-group"><label for="exampleEmail11"
                                                                     class="">Nom</label>

                        {{ form_widget(form.nom, { 'attr': {'class': 'form-control'} }) }}

                    </div>
                </div>
                <div class="col-md-6">
                    <div class="position-relative form-group"><label
                                for="exampleEmail11" class="">poste</label>
                        {{ form_widget(form.poste, { 'attr': {'class': 'form-control'} }) }}


                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="form-row">
        <div class="col-md-6">
            <div class="form-row">
                <div class="col-md-6">
                    <div class="position-relative form-group"><label
                                for="examplePassword11" class="">Specialite</label>
                        {{ form_widget(form.specialite, { 'attr': {'class': 'form-control'} }) }}


                    </div>
                </div>
                <div class="col-md-6">
                    <div class="position-relative form-group"><label
                                for="exampleEmail11" class="">facebook</label>
                        {{ form_widget(form.facebook, { 'attr': {'class': 'form-control'} }) }}


                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="form-row">

        <div class="col-md-6">
            <div class="form-row">
                <div class="col-md-6">
                    <div class="position-relative form-group"><label for="exampleEmail11"
                                                                     class="">Instagram</label>

                        {{ form_widget(form.instagram, { 'attr': {'class': 'form-control'} }) }}

                    </div>
                </div>
                <div class="col-md-6">
                    <div class="position-relative form-group"><label
                                for="exampleEmail11" class="">Linkedin</label>
                        {{ form_widget(form.linkedin, { 'attr': {'class': 'form-control'} }) }}


                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="form-row">

        <div class="col-md-6">
            <div class="form-row">

                <div class="col-md-12">
                    <div class="position-relative form-group"><label
                                for="exampleEmail11" class="">Image</label>
                        {{ form_widget(form.imageFile) }}

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="mc_embed_signup_scroll" class="htc__news__inner">
        <div class="slider__btn">
            <button class="btn btn-primary" type="submit"><i
                        class="fa fa-check"></i>&nbsp; Ajouter
            </button>
        </div>
    </div>


    {{ form_end(form) }}

{% endblock %}
