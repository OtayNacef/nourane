{% extends 'base.html.twig' %}
{% block title %}{{ blog.title }} - Association Nourane{% endblock %}

{% block body %}

    <div class="inner-banner">
        <div class="container">
            <h2>{{ blog.title }} </h2>
            <ol class="breadcrumb">
                <li><a href="#">Acceuil</a></li>
                <li><a href="#">Actulait√©</a></li>
            </ol>
        </div>
    </div>
    <!--CONTENT START-->
    <div class="content">
        <div class="container">
            <div class="content-cover">
                <div class="row">
                    <!--PAGE CONTENT START-->
                    <div class="col-lg-9">
                        <!--BLOG LIST START-->
                        <div class="kode-blog-detail">

                            <figure class="kode-detail-thumb"><img src="{{ asset('AppImg/') }}{{ blog.imageName }}"
                                                                   alt=""></figure>

                            <!--BLOG DETAIL TEXT START-->
                            <div class="kode-text">
                                <h2>{{ blog.title }}</h2>
                                <div class="blog-meta">
                                    <ul>
                                        <li>By:<a href="#"> {{ blog.author }}</a></li>
                                        <li><a href="#">{{ blog.dateCreation|date }}</a></li>
                                    </ul>
                                </div>

                                <p>{{ blog.content|raw }}</p></div>

                        </div>
                        <!--BLOG LIST START-->
                        <div class="kode-admin-post">
                            {% if 'https' in blog.author.imageName %}
                                <figure><img width="100" height="100" src="{{ blog.author.imageName }}" alt=""></figure>

                            {% else %}
                                <figure><img width="100" height="100"
                                             src="{{ asset('AppImg/') }}{{ blog.author.imageName }}" alt=""></figure>
                            {% endif %}
                            <div class="admin-info">
                                <h2>Ecrit par {{ blog.author }}</h2>

                            </div>

                        </div>
                        <div class="kode-comments">
                            <h2>Recent Comments:</h2>
                            <div id="disqus_thread"></div>
                            <script>

                                (function () {
                                    var d = document, s = d.createElement('script');
                                    s.src = 'https://association-nourane.disqus.com/embed.js';
                                    s.setAttribute('data-timestamp', +new Date());
                                    (d.head || d.body).appendChild(s);
                                })();
                            </script>
                            <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments
                                    powered by Disqus.</a></noscript>

                        </div>

                    </div>
                    <!--PAGE CONTENT END-->
                    <div class="col-md-3 sidebar">
                        <div class="widget widget-blog">
                            <div class="widget-header">
                                <h2 style="color: #e6007e">Actualites recentes</h2>
                            </div>
                            <ul>
                                {% for bloglatest in latest %}
                                    <li>
                                        <div class="kode-thumb">
                                            <a href="{{ path('DetailsBlog' , {blog : bloglatest.id}) }}"><img width="70"
                                                                                                              height="70"
                                                                                                              src="{{ asset('AppImg/') }}{{ bloglatest.imageName }}"
                                                                                                              alt=""></a>
                                        </div>
                                        <div class="kode-text">
                                            <h5><a href="#">{{ bloglatest.title }}</a></h5>
                                            <p>{{ bloglatest.dateCreation|date }} </p>
                                        </div>
                                    </li>
                                {% endfor %}
                                <!--BLOG LIST END-->
                            </ul>
                        </div>

                        <br>
                            <div class="widget widget-social-network">
                                <h2 style="color: #e6007e"><b>Suivez-nous sur</b></h2>
                                </br>
                                <ul>
                                    <li class="fb">
                                        <a href="https://www.facebook.com/association.nourane"  target="_blank">
                                            <i class="fa fa-facebook"></i>
                                        </a>
                                    </li>
                                    <li class="instagram">
                                        <a href="https://www.instagram.com/association_nourane/"  target="_blank">
                                            <i class="fa fa-instagram"></i>
                                        </a>
                                    </li>
                                    <li class="youtube">
                                        <a href="https://www.youtube.com/channel/UCv_E15tk09Tfjv_JPT4fSzw"  target="_blank">
                                            <i class="fa fa-youtube"></i>
                                        </a>
                                    </li>

                                </ul>
                            </div>
                    </div>
                    <!--RIGHT SIDE BAR END-->
                </div>
            </div>
        </div>
    </div>

{% endblock %}
