{% extends 'admin.html.twig' %}

{% block body %}
<div class="card">
    <div class="card-header"> <h3>Ajoutez une actualité</h3>
    </div>
    <div class="card-body">
    {{ form_start(form) }}


        <div class="form-row">

            <div class="col-md-12">
                <div class="form-row">
                    <div class="col-md-6">
                        <div class="position-relative form-group">

                            {{ form_widget(form.title) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="position-relative form-group">
                            {{ form_widget(form.imageFile, {'attr': {'class': 'custom-file-input'}}) }}
                            <label class="custom-file-label" for="inputGroupFile02" aria-describedby="inputGroupFileAddon02">choisir une image</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-row">

            <div class="col-md-12">
                <div class="form-row">
                    <div class="col-md-12">
                        <div class="position-relative form-group"><label for="exampleEmail11"
                                                                         class="">Contenue</label>

                            {{ form_widget(form.content) }}
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div id="mc_embed_signup_scroll" class="pull-right">
            <div class="slider__btn">
                <button class="btn btn-primary" type="submit"><i
                            class="fa fa-check"></i>&nbsp; Ajouter
                </button>
            </div>
        </div>

        <div class="col-md-6  mb-6">
            <label for="nomEvenement">date creation</label>
            {{ form_widget(form.dateCreation, {'attr': {'class': 'form-control'}}) }}

        </div>
        {{ form_end(form) }}
    </div>
        <div class="card-footer">

        <a class="btn btn-primary" href="{{ path('indexAdminActualite') }}#videos">
            Retour à la liste</a>
        </div>


</div>
{% endblock %}