{% extends 'admin.html.twig' %}
{% block body %}

    <div class="page-content">

        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Liste des utilisateurs</h4>
                        <p class="card-description">
                            Liste des utilisateurs <code>.vous pouvez activer ou d√©sactiver ou supprimer des
                                utilisateurs</code>
                        </p>
                        <div class="table-responsive">
                            <table id="dataTableExample" class="table">
                                <thead>
                                <tr>
                                    <th>
                                        Nom
                                    </th>
                                    <th>
                                        Email
                                    </th>

                                    <th>
                                        Actions
                                    </th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for user in users %}
                                    <tr>
                                        <td>
                                            {{ user.username }}
                                        </td>
                                        <td>
                                            {{ user.email }}
                                        </td>

                                        <td>
                                            <div class="row">
                                                {% if user.enabled == 1 %}
                                                    <div class="col-md-2">
                                                        <form action="{{ path('admin_block',{id:user.id}) }}">
                                                            <button type="submit" class="btn btn-warning">
                                                                block
                                                            </button>
                                                        </form>
                                                    </div>
                                                {% else %}
                                                    <div class="col-md-2">
                                                        <form action="{{ path('admin_block',{id:user.id}) }}">
                                                            <button type="submit" class="btn btn-info">
                                                                unblock
                                                            </button>
                                                        </form>
                                                    </div>
                                                {% endif %}
                                                <div class="col-md-2">
                                                    <form action="{{ path('admin_delete_user',{id:user.id}) }}">
                                                        <a type="submit" class="btn btn-danger">
                                                            supprimer
                                                        </a>
                                                    </form>
                                                </div>

                                            </div>


                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                            <div class="pagination">

                                {{ knp_pagination_render(dons, 'Pagination/pagination.html.twig') }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}