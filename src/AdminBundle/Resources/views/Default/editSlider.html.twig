{% extends 'admin.html.twig' %}
{% block body %}

    <div class="card">
        <div class="card-header">
            <h1>Modifier {{ cat.title }}</h1>
        </div>
        <div class="card-body">
            {{ form_start(form) }}


            <div class="form-row">

                <div class="col-md-6">
                    <div class="form-row">
                        <div class="col-md-6">
                            <div class="position-relative form-group"><label for="exampleEmail11"
                                                                             class="">Titre</label>

                                {{ form_widget(form.title, { 'attr': {'class': 'form-control'} }) }}

                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-row">

                <div class="col-md-6">
                    <div class="form-row">

                        <div class="col-md-6">
                            <div class="position-relative form-group"><label
                                        for="exampleEmail11" class="">contenue</label>
                                {{ form_widget(form.content, { 'attr': {'class': 'form-control'} }) }}


                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-row">
                <div class="col-md-6">
                    <div class="form-row">
                        <div class="col-md-6">
                            <label
                                    for="examplePassword11" class="">Image</label>
                            <div class="position-relative form-group">
                                {{ form_widget(form.photo, { 'attr': {'class': 'custom-file-input'} }) }}
                                <label class="custom-file-label" for="inputGroupFile02" aria-describedby="inputGroupFileAddon02">choisir une image</label>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <div id="mc_embed_signup_scroll" class="htc__news__inner">
                <div class="slider__btn">
                    <button class="btn btn-primary" type="submit"><i
                                class="fa fa-check"></i>&nbsp; Modifier
                    </button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>

    </div>

{% endblock %}